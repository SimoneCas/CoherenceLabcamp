<?xml version="1.0"?>

<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
	xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

	<!-- 
		1. Abilitare Pof serialization
		2. Definire un Distributed-Schema, referenziato dalle cache, configurando: thread-count-max, thread-count-min, partition-count, backup-count, key-associator ed implementazione <local-schema> della BackingMap
		3. Definire le tre seguenti cache: CUSTOMERCACHE (CustomerKey, CustomerValue), ORDERCACHE (OrderKey, OrderValue) , PRODUCTCACHE (ProductKey, ProductValue)	
	 	4. Aggiungere configurazione key-associator (step da eseguire dopo il punto xxx)
	 -->

	<defaults>
		<serializer system-property="tangosol.coherence.serializer">pof</serializer>
		<socket-provider system-property="tangosol.coherence.socketprovider" />
	</defaults>

	<caching-scheme-mapping>
		<!-- CUSTOMERS -->
		<cache-mapping>
			<cache-name>CUSTOMERCACHE</cache-name>
			<scheme-name>coherence-labcamp-scheme</scheme-name>
			<key-type>it.reply.labcamp.coherence.model.key.CustomerKey</key-type>
   			<value-type>it.reply.labcamp.coherence.model.value.CustomerValue</value-type>
		</cache-mapping>
		<!-- ORDERS -->
		<cache-mapping>
			<cache-name>ORDERCACHE</cache-name>
			<scheme-name>coherence-labcamp-scheme</scheme-name>
			<key-type>it.reply.labcamp.coherence.model.key.OrderKey</key-type>
   			<value-type>it.reply.labcamp.coherence.model.value.OrderValue</value-type>
		</cache-mapping>
		<!-- PRODUCTS -->
		<cache-mapping>
			<cache-name>PRODUCTCACHE</cache-name>
			<scheme-name>coherence-labcamp-scheme</scheme-name>
			<key-type>it.reply.labcamp.coherence.model.key.ProductKey</key-type>
   			<value-type>it.reply.labcamp.coherence.model.value.ProductValue</value-type>
		</cache-mapping>
	</caching-scheme-mapping>

	<caching-schemes>		
		<distributed-scheme>
			<scheme-name>coherence-labcamp-scheme</scheme-name>
			<service-name>LabService</service-name>
			<serializer>pof</serializer>
			<thread-count-max>16</thread-count-max>
			<thread-count-min>4</thread-count-min>
			<partition-count>1031</partition-count>
			<backup-count>2</backup-count>
			<key-associator>
				<class-name>it.reply.labcamp.coherence.keyaffinity.KeyCacheAssociator</class-name>
			</key-associator>
			<backing-map-scheme>
				<local-scheme />
			</backing-map-scheme>
			<autostart>true</autostart>
		</distributed-scheme>
	</caching-schemes>
</cache-config>